<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#000000"
    android:orientation="vertical"
    android:weightSum="1"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.50"
        android:weightSum="1">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/seekBar"
            android:layout_weight="0.13"
            android:background="#ff020025" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.13">

            <Button
                android:layout_width="290dp"
                android:layout_height="100dp"
                android:text="1"
                android:id="@+id/button"
                android:textSize="50sp" />

            <Button
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:text="2"
                android:id="@+id/button3"
                android:textSize="50sp" />

            <Button
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:text="3"
                android:id="@+id/button2"
                android:textSize="50dp" />

            <Button
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:text="4"
                android:id="@+id/button4"
                android:textSize="50sp" />

            <Button
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:text="5"
                android:id="@+id/button5"
                android:textSize="50sp" />

        </TableRow>

        <TextView
            android:layout_width="880dp"
            android:layout_height="wrap_content"
            android:text="Station 109.5"
            android:id="@+id/textView2"
            android:textSize="90dp"
            android:background="#ff0f307f"
            android:autoText="true"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffff6b0a"
            android:typeface="monospace"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="0.5">

        <ToggleButton
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.35"
            android:textSize="50dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.12"
            android:background="#ff000000"
            android:weightSum="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="99dp"
                android:id="@+id/imageButton2"
                android:src="@mipmap/arrow_left_1"
                android:layout_weight="0.12"
                android:background="#000000"
                android:contentDescription="rewind" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="103dp"
                android:id="@+id/imageButton3"
                android:src="@mipmap/pause_button"
                android:background="#000000"
                android:contentDescription="pause button" />

            <ImageButton
                android:layout_width="117dp"
                android:layout_height="113dp"
                android:id="@+id/imageButton4"
                android:src="@mipmap/play_button"
                android:background="#ff484848"
                android:contentDescription="play" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:id="@+id/imageButton"
                android:src="@mipmap/arrow_right_1"
                android:background="#000000"
                android:adjustViewBounds="true"
                android:layout_weight="0.04"
                android:contentDescription="fast forward" />

        </TableRow>

    </LinearLayout>
</LinearLayout>
